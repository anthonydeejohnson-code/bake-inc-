timer_max = 120 - global.difficulty  // in the customer create



global.day_count = 1;     // start at day 1
global.difficulty = 1;    // optional difficulty factor //put both in obj_game_controller create step




/// ROOM CYCLE
current_cycle = 1 - current_cycle;

// SWITCH ROOM
if (current_cycle == 0)
{
    global.day_count += 1;        
    global.difficulty += 0.5;
    room_goto(room_day);
}
else
{
   
    room_goto(room_night);
}

// restart cycle
alarm[0] = alarm_length;
// put all this inside of obj_gamecontroller step event


spill_timer= 30 - global.difficulty; in o_spillage creat event

trash_timer = 30 - global.difficulty; in o_trashpile create event
